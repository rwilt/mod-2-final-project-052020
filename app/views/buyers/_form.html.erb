<%= form_for @buyer do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <%= f.label :zip, "Zipcode" %>
    <%= f.number_field :zip %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.submit %>
  
<% end %>